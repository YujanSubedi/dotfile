set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id

# Basic Settings
set hidden false
set ignorecase true
set number true
set relativenumber true
set icons true
set ratios 1:2:3
set mouse false

# Remove the move and delete function
map d
map m
map x
map w

# Remove Mouse function
map <m-left>
map <m-right>

# Basic Functions
map . set hidden!
# map = $vimiv .
map f $fzf
map <c-s> $ncdu
map <c-w> quit
map <c-d> quit
map <enter> open
map r reload
map R rename
map <c-c> clear

# Movement
map <a-q> quit
map gy cd ~/Yujan
map gd cd ~/Downloads
map gp cd ~/Pictures
map gs cd ~/Pictures/Screenshots
map gc cd ~/.config
map gm cd ~/Class_materials

# :q to quit same as vim
cmd q quit
